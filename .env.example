# ============================================================================
# Documentation Settings
# ============================================================================

DOCS_SITE_NAME="CML Cloud Starter App"
DOCS_SITE_URL="https://bvandewe.github.io/cml-cloud-manager/"
DOCS_FOLDER=./docs
DOCS_DEV_PORT=8000

# ============================================================================
# Application Settings
# ============================================================================

# Python Path Configuration
PYTHONPATH=./src

# Application Settings
DEBUG=true
LOG_LEVEL=DEBUG
APP_HOST=127.0.0.1
APP_PORT=8030

# Keycloak Settings
KEYCLOAK_PORT=8031
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_REALM=cml-cloud-manager
KEYCLOAK_CLIENT_ID=cml-cloud-manager-public

# JWT Settings
SECRET_KEY=your-secret-key-here-change-in-production # pragma: allowlist secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Token Claim Validation (optional hardened checks)
VERIFY_ISSUER=true
EXPECTED_ISSUER="http://localhost:8031/realms/cml-cloud-manager"
VERIFY_AUDIENCE=true
EXPECTED_AUDIENCE=["cml-cloud-manager"]
REFRESH_AUTO_LEEWAY_SECONDS=60

# MongoDB Settings
MONGODB_PORT=8032
MONGODB_ROOT_USERNAME=root
MONGODB_ROOT_PASSWORD=password123 # pragma: allowlist secret
MONGODB_DATABASE=cml_cloud_manager
MONGODB_EXPRESS_PORT=8033

# Event Player Settings
EVENT_PLAYER_PORT=8034

# OpenTelemetry Collector Settings
OTEL_COLLECTOR_GRPC_PORT=4337
OTEL_COLLECTOR_HTTP_PORT=4338
OTEL_COLLECTOR_METRICS_PORT=8838
OTEL_COLLECTOR_HEALTH_PORT=13333

# Docker Network
DOCKER_NETWORK_NAME=cml-cloud-manager-net

# AWS Settings
AWS_ACCESS_KEY_ID=AK123456789 # pragma: allowlist secret
AWS_SECRET_ACCESS_KEY=SECRETACCESSKEY # pragma: allowlist secret

# CML Worker Settings
CML_WORKER_AMI_NAME_DEFAULT=my-default-ami-name-v0.1.0
CML_WORKER_INSTANCE_TYPE_DEFAULT=m5zn.metal
CML_WORKER_SECURITY_GROUP_IDS=["sg-0123456789123"]
CML_WORKER_SUBNET_ID=subnet-123abc45
CML_WORKER_KEY_NAME=my-key
CML_WORKER_USERNAME=sysadmin
CML_WORKER_API_USERNAME=admin
CML_WORKER_API_PASSWORD=cmlpassword # pragma: allowlist secret

# Background Job Settings
AUTO_IMPORT_WORKERS_ENABLED=true
AUTO_IMPORT_WORKERS_INTERVAL=60
AUTO_IMPORT_WORKERS_REGION=us-east-1
AUTO_IMPORT_WORKERS_AMI_NAME=my-default-ami-name-v0.1.0
LABS_REFRESH_INTERVAL=300
WORKER_METRICS_POLL_INTERVAL=180
